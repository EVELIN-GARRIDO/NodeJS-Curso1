<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/">Home</a></li>
        <li class="breadcrumb-item"><a href="/mongo">Conexión con Mongodb</a></li>
        <li class="breadcrumb-item active" aria-current="page">Categorías</li>
    </ol>
</nav>
<h1>Categorías</h1>
{{>flash}}
<p>
    <a href="/mongo/categorias/add" class="btn btn-success">Crear</a>
</p>
<div class="responsive">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>ID</th>
                <td>Nombre</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            {{#each datos}}
                <tr>
                    <td>{{this._id}}</td>
                    <td>{{this.nombre}}</td>
                    <td>
                        <a href="/mongo/categorias/edit/{{this._id }}">
                            <i class="fas fa-edit"></i>
                        </a>
                        &nbsp;
                        <a href="javascript:void(0);"
                            onclick="confirmaAlert('Realmente desea eliminar este registro?', '/mongo/categorias/delete/{{this._id }}');">
                            <i class="fas fa-trash"></i>
                        </a>
                    </td>
                </tr>
            {{/each}}
        </tbody>
    </table>
</div>
 